/dts-v1/;

#include "platypus.dtsi"
#include <dt-bindings/gpio/gpio.h>

/ {
	model = "Synaptics Platypus RDK";
	compatible = "Synaptics,platypus", "Synaptics,asserial";

	memory {
		device_type = "memory";
		reg = <0 0 0 0x80000000>;
	};

	chosen {
		stdout-path = &smuart0;
	};

	regulators {
		compatible = "simple-bus";
		#address-cells = <1>;
		#size-cells = <0>;

		sdio_vmmc: sdio_vmmc {
			compatible = "regulator-fixed";
			pinctrl-0 = <&sdio_vmmc_pmux>;
			pinctrl-names = "default";
			regulator-min-microvolt = <3300000>;
			regulator-max-microvolt = <3300000>;
			regulator-name = "vmmc_sdio";
			enable-active-high;
			gpio = <&portb 16 GPIO_ACTIVE_HIGH>;
		};

		sdio_vqmmc: sdio_vqmmc {
			compatible = "regulator-gpio";
			pinctrl-0 = <&sdio_vqmmc_pmux>;
			pinctrl-names = "default";
			regulator-min-microvolt = <1800000>;
			regulator-max-microvolt = <3300000>;
			regulator-name = "vqmmc_sdio";
			regulator-type = "voltage";
			states = <1800000 0x0 3300000 0x1>;
			gpios = <&porta 17 GPIO_ACTIVE_HIGH>;
		};
	};

	firmware {
		optee {
			compatible = "linaro,optee-tz";
			method = "smc";
		};
	};

	panel0-backlight {
		compatible = "gpio-backlight";
		gpios = <&expander0 1 GPIO_ACTIVE_HIGH>;
		status = "okay";
	};
};

&pinctrl {
	sdio_pmux: sdio_pmux{
		groups = "SDIO0_CDn";
		function = "sdio";
	};

	sdio_vmmc_pmux: sdio_vmmc_pmux{
		groups = "SDIO0_WP";
		function = "gpio";
	};

	sdio_vqmmc_pmux: sdio_vqmmc_pmux{
		groups = "I2S1_DO1";
		function = "gpio";
	};
};

&sysmgr_pinctrl {
	sm_i2c_tw3_pmux: sm_i2c_tw3_pmux {
		groups = "SM_TW3_SCL", "SM_TW3_SDA";
		function = "tw3";
	};
};

&CPU_SLEEP_0 {
	status = "disabled";
};

&smuart0 {
	status = "okay";
};

&spi0 {
	status = "okay";
	max-write-size = <128>;
	clock-frequency = <200000000>;
	spi-flash@0 {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "jedec,spi-nor";
		reg = <0>;
		memory-map = <0x0 0xf0000000 0x0 0x4000000>;
		spi-max-frequency = <10000000>;
	};
};

&i2c3 {
	status = "okay";
	pinctrl-names = "default";
	pinctrl-0 = <&sm_i2c_tw3_pmux>;
	expander0: gpio@43 {
		compatible = "fcs,fxl6408";
		reg = <0x43>;
		gpio-controller;
		#gpio-cells = <2>;
	};
};

&mdio0 {
	phy0: ethernet-phy@0 {
		reg = <0>;
	};
};

&gmac0 {
	status = "okay";
	max-speed = <100>;
	phy-mode = "mii";
	phy-handle = <&phy0>;
	phy = <&phy0>;
};

&sdhci0 {
	status = "okay";
	mmc-ddr-1_8v;
	mmc-hs200-1_8v;
	mmc-hs400-1_8v;
	fixed-voltage;
};

&sdhci1 {
	status="okay";
	pinctrl-0 = <&sdio_pmux>;
	pinctrl-names = "default";
	sdhci-sdio;
	cap-sd-highspeed;
	sd-uhs-sdr12;
	sd-uhs-sdr25;
	sd-uhs-sdr50;
	sd-uhs-sdr104;
	fixed-voltage;
	vmmc-supply = <&sdio_vmmc>;
	vqmmc-supply = <&sdio_vqmmc>;
};

&usb_phy0 {
	status = "okay";
};

&usb0 {
	status = "okay";
};

&usb_phy1 {
	status = "okay";
};

&xhci0 {
	status = "okay";
};

&vpp_fb {
	status = "okay";

	disp-mode = <0>;
	disp1-res-id = <13>;

	dsi_panel {
		status= "okay";

		NO_OF_RESID =  <1>;
		DSI_RES =  <102>;
		ACTIVE_WIDTH = <800>;
		HFP = <60>;
		HSYNCWIDTH = <32>;
		HBP = <60>;
		ACTIVE_HEIGHT = <1280>;
		VFP = <16>;
		VSYNCWIDTH = <2>;
		VBP = <14>;
		TYPE = <1>;
		SCAN = <0>;
		FRAME_RATE = <9>;
		FLAG_3D = <0>;
		FREQ = <75000>;
		PTS_PER_4 = <6000>;

		bits_per_pixel = <24>;
		busformat = <0>;

		VB_MIN = <6>;
		HB_MIN = <30>;
		V_OFF = <6>;
		H_OFF = <20>;
		HB_VOP_OFF = <8>;
		VB_VOP_OFF = <3>;
		HB_BE = <7>;
		VB_BE = <2>;
		VB_FP = <2>;
		HB_FP = <10>;
		PIXEL_CLOCK = <75000>;

		HTOTAL = <952>;
		Lanes = <4>;
		Vid_mode = <2>;
		virtual_chan = <0>;
		Clk_Lane_Polarity = <0>;
		Data_Lane_Polarity = <0>;
		Recv_ack = <0>;
		Loosely_18 = <0>;
		H_polarity = <1>;
		V_Polarity = <1>;
		Data_Polarity = <1>;
		Eotp_tx = <1>;
		Eotp_rx = <0>;
		non-Continuous_clk = <1>;
		dpi_lp_cmd =  <1>;
		Color_coding = <5>;
		Chunks = <0>;
		Null_Pkt = <0>;
		Byte_clk = <56250>;
	};
};
