/dts-v1/;

#include "dolphin.dtsi"
#include <dt-bindings/gpio/gpio.h>

/ {
	model = "Synaptics Dolphin RDK";
	compatible = "Synaptics,dolphin", "Synaptics,asserial";

	memory {
		device_type = "memory";
		reg = <0 0 0 0x80000000>;
	};

	chosen {
		stdout-path = &smuart0;
	};

	regulators {
		compatible = "simple-bus";
		#address-cells = <1>;
		#size-cells = <0>;

		sdio_vmmc: sdio_vmmc {
			pinctrl-0 = <&sdio_vmmc_pmux>;
			pinctrl-names = "default";
			compatible = "regulator-fixed";
			regulator-min-microvolt = <3300000>;
			regulator-max-microvolt = <3300000>;
			regulator-name = "vmmc_sdio";
			enable-active-high;
			gpio = <&portb 12 GPIO_ACTIVE_HIGH>;
		};
	};

	firmware {
		optee {
			compatible = "linaro,optee-tz";
			method = "smc";
		};
	};

	panel0-backlight {
		compatible = "gpio-backlight";
		gpios = <&expander0 1 GPIO_ACTIVE_HIGH>;
		status = "okay";
	};
};

&sysmgr_pinctrl {
	sm_i2c_tw3_pmux: sm_i2c_tw3_pmux {
		groups = "SM_TW3_SCL", "SM_TW3_SDA";
		function = "tw3";
	};

	gmac_reset_pmux: gmac_reset_pmux {
		groups = "SM_TDO";
		function = "gpio";
	};
};

&pinctrl {
	emmc_pmux: emmc-pmux {
		groups = "NAND_IO0", "NAND_IO1", "NAND_IO2", "NAND_IO3", "NAND_IO4", "NAND_IO5", "ND_IO6", "NAND_IO7", "NAND_ALE", "NAND_CLE", "NAND_WPn";
		function = "emmc";
	};

	sdio_pmux: sdio_pmux{
		groups = "SDIO_CDn";
		function = "sdio";
	};

	sdio_vmmc_pmux: sdio_vmmc_pmux{
		groups = "SDIO_WP";
		function = "gpio";
	};

	i2c0_pmux: i2c0-pmux {
		groups = "TW0_SCL", "TW0_SDA";
		function = "tw0";
	};
};

&CPU_SLEEP_0 {
	status = "disabled";
};

&smuart0 {
	status = "okay";
};

&spi0 {
	status = "okay";
	max-write-size = <128>;
	clock-frequency = <100000000>;
	spi-flash@0 {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "jedec,spi-nor";
		reg = <0>;
		memory-map = <0x0 0xf0000000 0x0 0x4000000>;
		spi-max-frequency = <10000000>;
	};
};

&phy0 {
	reg = <0>;
};

&i2c0 {
	status = "okay";
	pinctrl-names = "default";
	pinctrl-0 = <&i2c0_pmux>;
	clock-frequency = <100000>;

	rpi_panel_regulator: rpi_panel_regulator@44 {
		compatible = "raspberrypi,7inch-touchscreen-panel-regulator";
		reg = <0x45>;
		gpio-controller;
		#gpio-cells = <2>;
	};
};

&i2c3 {
	status = "okay";
	pinctrl-names = "default";
	pinctrl-0 = <&sm_i2c_tw3_pmux>;
	expander0: gpio@43 {
		compatible = "fcs,fxl6408";
		reg = <0x43>;
		gpio-controller;
		#gpio-cells = <2>;
	};
};

&gmac0 {
	status = "okay";
	max-speed = <1000>;
	phy-mode = "rgmii-id";
	phy-handle = <&phy0>;
	phy = <&phy0>;
	pinctrl-names = "default";
	pinctrl-0 = <&gmac_reset_pmux>;
	snps,reset-gpio = <&portd 8 GPIO_ACTIVE_HIGH>;
	snps,reset-active-high;
	snps,reset-delays-us = <0 10000 50000>;
};

&sdhci0 {
	status = "okay";
	mmc-ddr-1_8v;
	mmc-hs200-1_8v;
	mmc-hs400-1_8v;
	fixed-voltage;
};

&sdhci1 {
	status="okay";
	pinctrl-0 = <&sdio_pmux>;
	pinctrl-names = "default";
	sdhci-sdio;
	cap-sd-highspeed;
	sd-uhs-sdr12;
	sd-uhs-sdr25;
	sd-uhs-sdr50;
	sd-uhs-sdr104;
	pad_sn = <12>;
	pad_sp = <12>;
	vmmc-supply = <&sdio_vmmc>;
};

&usb_phy0 {
	status = "okay";
};

&usb0 {
	status = "okay";
};

&usb_phy1 {
	status = "okay";
};

&xhci0 {
	status = "okay";
};

&vpp_fb {
	status = "okay";

	disp-mode = <2>;
	disp1-res-id = <13>;
	disp2-res-id = <102>;

	dsi_panel {
		status= "okay";

		NO_OF_RESID =  <1>;
		DSI_RES =  <102>;

		ACTIVE_WIDTH = <800>;
		HFP = <70>;
		HSYNCWIDTH = <20>;
		HBP = <26>;
		ACTIVE_HEIGHT = <480>;
		VFP = <7>;
		VSYNCWIDTH = <2>;
		VBP = <21>;
		TYPE = <1>;
		SCAN = <0>;
		FRAME_RATE = <9>;
		FLAG_3D = <0>;
		FREQ = <28030>;
		PTS_PER_4 = <6000>;

		bits_per_pixel = <24>;
		busformat = <0>;

		VB_MIN = <6>;
		HB_MIN = <30>;
		V_OFF = <6>;
		H_OFF = <20>;
		HB_VOP_OFF = <8>;
		VB_VOP_OFF = <3>;
		HB_BE = <7>;
		VB_BE = <2>;
		VB_FP = <2>;
		HB_FP = <10>;
		PIXEL_CLOCK = <28030>;

		HTOTAL = <916>;
		Lanes = <1>;
		Vid_mode = <2>;
		virtual_chan = <0>;
		Clk_Lane_Polarity = <0>;
		Data_Lane_Polarity = <0>;
		Recv_ack = <0>;
		Loosely_18 = <0>;
		H_polarity = <1>;
		V_Polarity = <1>;
		Data_Polarity = <1>;
		Eotp_tx = <1>;
		Eotp_rx = <0>;
		non-Continuous_clk = <0>;
		dpi_lp_cmd = <1>;
		Color_coding = <5>;
		Chunks = <0>;
		Null_Pkt = <0>;
		Byte_clk = <84090>;
	};
};
